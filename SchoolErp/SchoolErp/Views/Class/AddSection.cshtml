
@{
    ViewBag.Title = "AddSection";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}

<script src="~/asset/Common.js"></script>
<script src="~/jquery/Section.js"></script>




<br />
<div class="row clearfix">
    <div class="col-md-12" style="">
        <div class="card">
            <div class="header">
                <h5>AddSection</h5>
            </div>
            <div class="body">
                <form id="basic-form" method="post" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" name="Name" id="S_Name" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Class :</label>
                                <select id="S_Class" class="form-control" required>
                                    <option value="">Select...........</option>
                                    @foreach (var item in ViewBag.cl)
                                    {
                                        <option value="@item.Class_Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Staff</label>
                                <select id="S_Staff" class="form-control" required>
                                    <option value="">Select...........</option>
                                    @foreach (var item in ViewBag.st)
                                    {
                                        <option value="@item.Staff_Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            
                            
                            <br>

                        </div>
                    </div>

                    <button type="button" class="btn  btn-primary btn-block col-md-6" onclick="AddSection()">Save</button>
                </form>
            </div>
        </div>
    </div>

</div>


