
@{
    ViewBag.Title = "AddClasses";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}


<script src="~/jquery/Class.js"></script>
<script src="~/asset/Common.js"></script>



<br />
<div class="row clearfix">
    <div class="col-md-12" >
        <div class="card" style="height:160%; ">
            <div class="header">
                <h5>AddClasses</h5>
            </div>
            <div class="body">
                <form id="basic-form" method="post" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" name="Name" id="C_Name" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Fees</label>
                                <input type="text" id="Fees" value="0" class="form-control" onkeyup="this.value = this.value.replace(/[^\d]/, '');"  />
                                @*<input type="number" name="Fees" id="Fees" class="form-control" required>*@
                            </div>
                            
                            
                            


                            
                        </div>
                        
                    </div>

                    <button type="button" class="btn  btn-primary btn-block col-md-6" onclick="AddClass()">Save</button>
                </form>
            </div>
        </div>
    </div>

</div>


