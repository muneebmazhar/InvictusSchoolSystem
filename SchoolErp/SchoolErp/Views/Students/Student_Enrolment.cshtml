
@{
    ViewBag.Title = "Student_Enrolment";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}


<script src="~/jquery/StudentEnrolment.js"></script>
<script src="~/asset/Common.js"></script>



<br />
<div class="row clearfix">
    <div class="col-md-12" style="">
        <div class="card">
            <div class="header">
                <h5>StudentEnrollment</h5>
            </div>
            <div class="body">
                <form id="basic-form" method="post" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            
                            

                            <div class="form-group">
                                <label>Roll # :</label>
                                <select id="E_Roll" class="form-control" required>
                                    <option value="">Select...........</option>
                                    @foreach (var item in ViewBag.stud)
                                    {
                                        <option value="@item.Stud_Id">@item.Roll_Number</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Class</label>
                                <select id="E_Class" class="form-control" required>
                                    <option value="">Select...........</option>
                                    @foreach (var item in ViewBag.cl)
                                    {
                                        <option value="@item.Class_Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Section</label>
                                <select id="E_Section" class="form-control" required>
                                    <option value="">Select...........</option>
                                    @foreach (var item in ViewBag.sec)
                                    {
                                        <option value="@item.Section_Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Incharge</label>
                                <select id="E_Staff" class="form-control" required>
                                    <option value="">Select...........</option>
                                    @foreach (var item in ViewBag.st)
                                    {
                                        <option value="@item.Staff_Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            


                            
                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <label>Session Start Date</label>
                                <input type="date" name="" id="E_Startdate" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Session End Date</label>
                                <input type="date" name="password" id="E_Enddate" class="form-control" required>
                            </div>
                            
                            <br>

                        </div>
                    </div>

                    <button type="button" class="btn  btn-primary btn-block col-md-6" onclick="Student_Enrolment()">Save</button>
                </form>
            </div>
        </div>
    </div>

</div>


