
@{
    ViewBag.Title = "Result";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}


<script src="~/jquery/Result.js"></script>
<script src="~/asset/Common.js"></script>



<br />
<div class="row clearfix">
    <div class="col-md-12" style="">
        <div class="card">
            <div class="header">
                <h5>AddResult</h5>
            </div>
            <div class="body">
                <form id="basic-form" method="post" novalidate>
                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group">
                                <label>Roll Number</label>
                                <select id="R_Roll" class="form-control" required>
                                    <option value="">Select...........</option>
                                    @foreach (var item in ViewBag.st)
                                    {
                                        <option value="@item.Stud_Id">@item.Roll_Number</option>
                                    }
                                </select>
                            </div>


                            <div class="form-group">
                                <label>Class</label>
                                <select id="R_Cal" class="form-control" required>
                                    <option value="">Select...........</option>
                                    @foreach (var item in ViewBag.cl)
                                    {
                                        <option value="@item.Class_Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Section</label>
                                <select id="R_Sec" class="form-control" required>
                                    <option value="">Select...........</option>
                                    @foreach (var item in ViewBag.sc)
                                    {
                                        <option value="@item.Section_Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Subject</label>
                                <select id="R_Sub" class="form-control" required>
                                    <option value="">Select...........</option>
                                    @foreach (var item in ViewBag.sb)
                                    {
                                        <option value="@item.Subject_Id">@item.Name</option>
                                    }
                                </select>
                            </div>






                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Obtained Marks</label>
                                <input type="text" id="Om" value="0" class="form-control" onkeyup="this.value = this.value.replace(/[^\d]/, '');" />
                            </div>
                            <div class="form-group">
                                <label>Total Marks</label>
                                <input type="text" id="Tm" value="0" class="form-control" onkeyup="this.value = this.value.replace(/[^\d]/, '');" />
                            </div>
                           

                        </div>

                    </div>

                    <button type="button" class="btn  btn-primary btn-block col-md-6" onclick="Result()">Save</button>
                </form>
            </div>
        </div>
    </div>

</div>


